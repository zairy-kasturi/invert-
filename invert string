#include "stdafx.h"
#include <iostream>
#include <string>
using namespace std;

int main()
{
	string str;
	cout << "Plz enter string : ";
	getline(cin, str);

	cout << "your string is : " << str<<endl;
	str = string(str.rbegin(), str.rend());
	cout << "invert your string is : " << str<<endl;
	return 0;
}
